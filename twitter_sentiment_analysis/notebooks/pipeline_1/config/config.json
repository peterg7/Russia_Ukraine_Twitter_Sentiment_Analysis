{
    "EXTRACT": {
        "import_path": "../../data/slava_ukraini_tweets{version}.csv",
        "import_version": 12,
        "import_dest": "../../data/slava_ukraini_tweets{version}.csv",
        "overwrite_data": false
    },

    "TRANSFORM": {
        "clean_tweet_regexs": [
            "https?:\\/\\/[a-zA-Z0-9@:%._\\/+~#=?&;-]*",
            "\\$[a-zA-Z0-9]*",
            "\\@[a-zA-Z0-9]*",
            "[^a-zA-Z\\\"]"
        ],
        "clean_hashtag_regexs": [
            "\\$[a-zA-Z0-9]*",
            "[^a-zA-Z\\\"]"
        ],
        "column_mappings": {
            "date": "date",
            "user_name": "username",
            "retweets": "retweets",
            "text": "tweet",
            "hashtags": "hashtags"
        },
        "filter_words": [
            "ukraine",
            "russia",
            "zelensky"
        ],
        "display_terms": 25
    },

    "MODEL": {
        "build_models": true
    },

    "LOAD": {
        "config": "./config/config_{timestamp}.json",
        "notebook": "../modules/pipeline_1",
        "transform": "./data/transformed/slava_ukraine_sentiment_{timestamp}.csv",
        "word_vec": "./models/slava_word_vec_{timestamp}.model",
        "kmeans": "./models/slava_kmeans_{timestamp}.joblib",
        "embeddings": "./data/embeddings/slava_words_{timestamp}.csv",
        "vectorizer": "./models/slava_vectorizer_{timestamp}.joblib",
        "linear_svc": "./models/slava_linearSVC_{timestamp}.joblib",
        "multi_nb": "./models/slava_multinomialNB_{timestamp}.joblib"
    }
}